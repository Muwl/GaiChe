<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:gravity="center_horizontal"
    android:background="@drawable/dialog_bg"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/dialog_pay_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:src="@drawable/dialog_back_btn"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#332C2B"
            android:textSize="@dimen/first_font"
            android:text="请输入支付密码"
            android:layout_centerInParent="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/green_div"/>

    <TextView
        android:id="@+id/dialog_pay_money"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="#332C2B"
        android:textSize="22sp"
        android:text="￥110.00"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bottom_div"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#47464B"
        android:gravity="center"
        android:textSize="@dimen/second_font"
        android:drawableLeft="@mipmap/dialog_pay_wal"
        android:drawablePadding="10dp"
        android:text="钱包"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:background="@color/bottom_div"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@mipmap/dialog_pwd"/>

        <EditText
            android:id="@+id/dialog_pay_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="#47464B"
            android:password="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:hint="请输入支付密码"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bottom_div"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

    <TextView
        android:id="@+id/dialog_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ED753A"
        android:textSize="@dimen/thrid_font"
        android:paddingTop="6dp"
        android:clickable="true"
        android:paddingBottom="8dp"
        android:text="忘记支付密码"/>

    <TextView
        android:id="@+id/dialog_pay_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/write"
        android:background="@drawable/dialog_ok_btn"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:textSize="@dimen/first_font"
        android:text="确认支付"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>




</LinearLayout>