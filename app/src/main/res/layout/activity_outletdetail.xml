<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/write"
    android:orientation="vertical">

    <include
        android:id="@+id/outletdetail_title"
        layout="@layout/activity_title" />

    <RadioGroup
        android:id="@+id/outletdetail_rb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/outletdetail_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="首页"
            android:textColor="@color/store_text_rb"
            android:textSize="@dimen/second_font" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/bottom_div" />

        <RadioButton
            android:id="@+id/outletdetail_moods"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="10dp"
            android:text="站点简介"
            android:textColor="@color/store_text_rb"
            android:textSize="@dimen/second_font" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/bottom_div" />

        <RadioButton
            android:id="@+id/outletdetail_technology"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="10dp"
            android:text="服务项目"
            android:textColor="@color/store_text_rb"
            android:textSize="@dimen/second_font" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/bottom_div" />

        <RadioButton
            android:id="@+id/outletdetail_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="10dp"
            android:text="服务评价"
            android:textColor="@color/store_text_rb"
            android:textSize="@dimen/second_font" />
    </RadioGroup>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bottom_div"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/outletdetail_homeview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/outletdetail_himage"
                        android:layout_width="123dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="10dp"
                        android:src="@color/bottom_div" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_toLeftOf="@id/foutlet_item_go"
                        android:layout_toRightOf="@id/foutlet_item_image"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/outletdetail_hname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="山东省日照市五莲县小拇指汽车维修站"
                            android:textColor="#5F5D5D"
                            android:textSize="@dimen/thrid_font" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="评价："
                                android:textColor="#5F5D5D"
                                android:textSize="@dimen/thrid_font" />


                            <com.gaicheyunxiu.gaiche.view.RatingBar
                                android:id="@+id/outletdetail_hbar"
                                style="@style/foodRatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:clickable="true"
                                android:rating="5"
                                hedgehog:starEmpty="@mipmap/ratbar_normal"
                                hedgehog:starFill="@mipmap/ratbar_checked"
                                hedgehog:starImageSize="18dp"></com.gaicheyunxiu.gaiche.view.RatingBar>

                            <TextView
                                android:id="@+id/outletdetail_hdiscussnum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text="868条"
                                android:textColor="#5F5D5D"
                                android:textSize="@dimen/thrid_font" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/outletdetail_haddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="五莲县"
                                android:textColor="#5F5D5D"
                                android:textSize="@dimen/thrid_font" />

                            <TextView
                                android:id="@+id/outletdetail_hdistance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="50.35km"
                                android:textColor="#5F5D5D"
                                android:textSize="@dimen/thrid_font" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="10dp"
                    android:background="@color/bottom_div" />

                <TextView
                    android:id="@+id/outletdetail_hdetailaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:text="地址：山东省日照市"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/second_font" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/bottom_div" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    
                    <LinearLayout
                        android:id="@+id/outletdetail_hphone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="@drawable/item_bg"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/hphone"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_marginLeft="10dp"
                            android:text="03235354"
                            android:textColor="#5F5D5D"
                            android:textSize="@dimen/second_font" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/bottom_div" />
                    <LinearLayout
                        android:id="@+id/outletdetail_hmessage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="@drawable/item_bg"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/hmessage"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_marginLeft="10dp"
                            android:text="在线预约"
                            android:textColor="#5F5D5D"
                            android:textSize="@dimen/second_font" />

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/bottom_div" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="地图导航"
                    android:textColor="#5F5D5D"
                    android:background="@drawable/item_bg"
                    android:drawableRight="@mipmap/main_go"
                    android:padding="8dp"
                    android:textSize="@dimen/second_font"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/bottom_div" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="服务项目报价信息"
                    android:textColor="#5F5D5D"
                    android:background="@drawable/item_bg"
                    android:padding="8dp"
                    android:textSize="@dimen/second_font"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/bottom_div" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/outletdetail_hyangxiu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="@drawable/item_bg"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/hyangxiu"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_marginLeft="10dp"
                            android:text="养修"
                            android:textColor="#1b7ac0"
                            android:textSize="@dimen/title_font" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/bottom_div" />
                    <LinearLayout
                        android:id="@+id/outletdetail_hmeirong"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="@drawable/item_bg"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/hmeirong"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_marginLeft="10dp"
                            android:text="美容"
                            android:textColor="#00983c"
                            android:textSize="@dimen/title_font" />

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/bottom_div" />

                <TextView
                    android:id="@+id/outletdetail_hpingjianum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="用户评论（2）"
                    android:textColor="#5F5D5D"
                    android:background="@drawable/item_bg"
                    android:drawableRight="@mipmap/main_go"
                    android:padding="8dp"
                    android:textSize="@dimen/second_font"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/bottom_div" />

                <com.gaicheyunxiu.gaiche.view.MyListView
                    android:id="@+id/outletdetail_hlistview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"/>

            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/outletdetail_infoview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:visibility="gone"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/outletdetail_infoimage"
                    android:layout_width="123dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:src="@color/bottom_div" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_toLeftOf="@id/foutlet_item_go"
                    android:layout_toRightOf="@id/foutlet_item_image"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/outletdetail_infoname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="山东省日照市五莲县小拇指汽车维修站"
                        android:textColor="#5F5D5D"
                        android:textSize="@dimen/thrid_font" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="评价："
                            android:textColor="#5F5D5D"
                            android:textSize="@dimen/thrid_font" />


                        <com.gaicheyunxiu.gaiche.view.RatingBar
                            android:id="@+id/outletdetail_infobar"
                            style="@style/foodRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:rating="5"
                            hedgehog:starEmpty="@mipmap/ratbar_normal"
                            hedgehog:starFill="@mipmap/ratbar_checked"
                            hedgehog:starImageSize="18dp"></com.gaicheyunxiu.gaiche.view.RatingBar>

                    </LinearLayout>


                        <TextView
                            android:id="@+id/outletdetail_infoscore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="服务：4.00 技术：4.00 环境5.00"
                            android:textColor="#5F5D5D"
                            android:singleLine="true"
                            android:textSize="@dimen/thrid_font" />
                    </LinearLayout>



            </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="10dp"
                    android:background="@color/bottom_div"/>

                <TextView
                    android:id="@+id/outletdetail_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/second_font"
                    android:text="画保护哈哈来看我的几哈考虑价位的刻录机"/>

                <ImageView
                    android:id="@+id/outletdetail_imagecontent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/outletdetail_serview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical">

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@drawable/item_bg">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ser_yangxiu"/>

                    <TextView
                        android:id="@+id/outletdetail_sernum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_marginLeft="10dp"
                        android:text="养修项目（3项）"
                        android:textColor="#1b7ac0"
                        android:textSize="@dimen/second_font" />

                </LinearLayout>

                <com.gaicheyunxiu.gaiche.view.MyListView
                    android:id="@+id/outletdetail_seryangxiulist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@drawable/item_bg">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ser_meirong"/>

                    <TextView
                        android:id="@+id/outletdetail_sermrnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_marginLeft="10dp"
                        android:text="美容项目（1项）"
                        android:textColor="#00983c"
                        android:textSize="@dimen/second_font" />

                </LinearLayout>

                <com.gaicheyunxiu.gaiche.view.MyListView
                    android:id="@+id/outletdetail_sermeironglist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </ScrollView>

            <LinearLayout
                android:id="@+id/outletdetail_bom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/write"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/outletdetail_money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#5F5D5D"
                    android:text="￥130.00"
                    android:textSize="@dimen/first_font"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>

                <ImageView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/bottom_div"/>

                <TextView
                    android:id="@+id/outletdetail_serkehu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="#5F5D5D"
                    android:text="客服"
                    android:padding="4dp"
                    android:drawableTop="@mipmap/service"
                    android:textSize="@dimen/second_font"
                    android:gravity="center"
                    android:layout_weight="1"/>


                <TextView
                    android:id="@+id/outletdetail_ok"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/write"
                    android:text="结算"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textSize="@dimen/first_font"
                    android:background="@drawable/pay_ok_bg_btn"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>
            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/outletdetail_pinjialist"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:scrollbars="none"
            />

    </RelativeLayout>

</LinearLayout>