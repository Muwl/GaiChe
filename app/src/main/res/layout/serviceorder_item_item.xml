<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/write"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/serviceorder_item_item_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#5F5D5D"
            android:textSize="@dimen/thrid_font"
            android:text="1.更换机油及机油滤清器"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/serviceorder_item_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5F5D5D"
            android:textSize="@dimen/thrid_font"
            android:layout_marginLeft="10dp"
            android:text="￥100.00元\u3000\u30001.00M"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/serviceorder_item_item_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cricle_org"/>
        <TextView
            android:id="@+id/serviceorder_item_item_bm"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="#5F5D5D"
            android:textSize="@dimen/thrid_font"
            android:text="服务编码"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/serviceorder_item_item_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ED753A"
            android:textSize="@dimen/first_font"
            android:layout_marginLeft="10dp"
            android:text="123456"/>

        <TextView
            android:id="@+id/serviceorder_item_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5F5D5D"
            android:textSize="@dimen/thrid_font"
            android:layout_marginLeft="10dp"
            android:text="未使用"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/serviceorder_item_item_div"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layerType="software"
        android:background="@drawable/dashed_lin"
        />

    <LinearLayout
        android:id="@+id/serviceorder_item_item_lin"
        android:layout_width="match_parent"
        android:gravity="right"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/serviceorder_item_item_evalute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ED753A"
            android:clickable="true"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:layout_marginLeft="10dp"
            android:paddingRight="8dp"
            android:background="@drawable/shoporder_orange_btn"
            android:textSize="@dimen/thrid_font"
            android:text="评价"/>
    </LinearLayout>


</LinearLayout>