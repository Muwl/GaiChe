<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/write"
    android:orientation="vertical">


    <include
        android:id="@+id/regiter_title"
        layout="@layout/activity_title" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/regiter_image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/phone_phone" />

                <EditText
                    android:id="@+id/regiter_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/regiter_image1"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:inputType="phone"
                    android:paddingRight="15dp"
                    android:textColor="#332C2B"
                    android:textColorHint="#B3B3B3"
                    android:textSize="@dimen/first_font" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/regiter_phone"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/regiter_image1"
                    android:background="@color/bottom_div" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/regiter_image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/phone_code" />


                <TextView
                    android:id="@+id/regiter_getcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/code_bg_btn"
                    android:padding="8dp"
                    android:text="获取验证码"
                    android:textColor="#333333"
                    android:textSize="@dimen/thrid_font" />

                <EditText
                    android:id="@+id/regiter_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/regiter_image2"
                    android:layout_toLeftOf="@id/regiter_getcode"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="#332C2B"
                    android:textColorHint="#B3B3B3"
                    android:textSize="@dimen/first_font" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/regiter_getcode"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/regiter_image2"
                    android:background="@color/bottom_div" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/regiter_image8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/register_gc" />

                <EditText
                    android:id="@+id/regiter_gc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/regiter_image8"
                    android:background="@null"
                    android:hint="推荐GC号（可不填）"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:password="true"
                    android:textColor="#332C2B"
                    android:textColorHint="#B3B3B3"
                    android:textSize="@dimen/first_font" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/regiter_gc"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/regiter_image8"
                    android:background="@color/bottom_div" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/regiter_image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/phone_pwd" />

                <EditText
                    android:id="@+id/regiter_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/regiter_image3"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:password="true"
                    android:textColor="#332C2B"
                    android:textColorHint="#B3B3B3"
                    android:textSize="@dimen/first_font" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/regiter_pwd"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/regiter_image3"
                    android:background="@color/bottom_div" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/regiter_image4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/phone_repwd" />


                <EditText
                    android:id="@+id/regiter_repwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/regiter_image4"
                    android:background="@null"
                    android:hint="请再次输入密码"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:password="true"
                    android:textColor="#332C2B"
                    android:textColorHint="#B3B3B3"
                    android:textSize="@dimen/first_font" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/regiter_repwd"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/regiter_image4"
                    android:background="@color/bottom_div" />
            </RelativeLayout>

            <CheckBox
                android:id="@+id/regiter_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/radio_rb"
                android:drawablePadding="10dp"
                android:layout_marginTop="20dp"
                android:button="@null"
                android:checked="true"
                android:textSize="@dimen/first_font"
                android:textColor="#2a69b1"
                android:text="同意盖车云修用户注册协议"/>


            <TextView
                android:id="@+id/regiter_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/submit_bg_btn"
                android:gravity="center"
                android:padding="12dp"
                android:text="提交"
                android:textColor="@color/write"
                android:textSize="@dimen/first_font" />

        </LinearLayout>


    </ScrollView>
        <include
            android:id="@+id/regiter_pro"
            layout="@layout/pro"
            android:visibility="gone"
            />
    </RelativeLayout>
</LinearLayout>