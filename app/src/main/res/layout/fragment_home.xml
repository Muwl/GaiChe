<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/home_title"
        layout="@layout/activity_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/main_carlin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/main_carimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/main_car" />

                <ImageView
                    android:id="@+id/main_caraddimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/main_add" />

                <TextView
                    android:id="@+id/main_carbrand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="添加我的爱车"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/second_font" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/main_go" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="0dp"
                android:paddingBottom="0dp" >

                <com.gaicheyunxiu.gaiche.view.MyGallery
                    android:id="@+id/gallery"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_alignParentTop="true"
                    android:padding="0dp" />

                <LinearLayout
                    android:id="@+id/lin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="7dp"
                    android:orientation="horizontal" >
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/write"
                android:layout_marginTop="0dp"
                android:paddingBottom="0dp" >
            <com.gaicheyunxiu.gaiche.view.MyGallery
                android:id="@+id/home_grally"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:padding="0dp" />
                <LinearLayout
                    android:id="@+id/home_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="6dp"
                    android:gravity="center"
                    android:orientation="horizontal" >
                    </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/home_shop"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/home_shop"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="1px"
                    android:background="@color/bottom_div"
                    android:layout_height="match_parent" />
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/home_shop2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@mipmap/home_shop"/>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/home_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="true"
                android:gravity="center_vertical"
                android:background="@drawable/item_bg">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/second_font"
                    android:padding="8dp"
                    android:layout_marginLeft="7dp"
                    android:text="商城"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/second_font"
                    android:text="全部分类"
                    android:layout_marginRight="7dp"
                    android:drawablePadding="4dp"
                    android:drawableRight="@mipmap/main_orange_go"
                    android:padding="8dp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/bottom_div"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="189dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/home_hotshop1"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/bottom_div"/>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/home_hotshop2"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/bottom_div"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/home_hotshop3"
                            android:layout_width="0dp"
                            android:scaleType="fitXY"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            />
                        <ImageView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/bottom_div"/>
                        <ImageView
                            android:id="@+id/home_hotshop4"
                            android:layout_width="0dp"
                            android:scaleType="fitXY"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <com.gaicheyunxiu.gaiche.view.MyListView
                android:id="@+id/home_mylist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>