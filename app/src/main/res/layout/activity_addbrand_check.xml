<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/activity_bg"
    android:layout_height="match_parent">

    <include
        android:id="@+id/addbrand_check_title"
        layout="@layout/activity_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/dialog_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#332C2B"
                    android:textSize="@dimen/first_font"
                    android:text="请输入支付密码"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#a4e4a4"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:paddingBottom="10dp"
                        android:src="@mipmap/dialog_pwd"/>

                    <EditText
                        android:id="@+id/addbrand_check_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textColor="#47464B"
                        android:password="true"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="40dp"
                        android:hint="请输入支付密码"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#a4e4a4"/>

                <TextView
                    android:id="@+id/addbrand_check_forgetpwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ED753A"
                    android:gravity="center"
                    android:textSize="@dimen/thrid_font"
                    android:paddingTop="6dp"
                    android:clickable="true"
                    android:paddingBottom="10dp"
                    android:text="忘记支付密码"/>

            </LinearLayout>


            <TextView
                android:id="@+id/addbrand_check_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:textColor="@color/write"
                android:background="@drawable/dialog_ok_btn"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:textSize="@dimen/first_font"
                android:text="确认"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
        </LinearLayout>

        <include
            android:id="@+id/addbrand_check_pro"
            layout="@layout/pro"
            android:visibility="gone"
            />
    </RelativeLayout>


</LinearLayout>