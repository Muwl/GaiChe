<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/activity_bg"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <include
        android:id="@+id/share_title"
        layout="@layout/activity_title"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="3dp"
        android:background="@color/bottom_div"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/share_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5F5D5D"
            android:layout_weight="1"
            android:textSize="@dimen/thrid_font"
            android:drawableTop="@mipmap/share_weixin"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="微信好友"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>
        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/bottom_div"/>
        <TextView
            android:id="@+id/share_weixincricle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5F5D5D"
            android:layout_weight="1"
            android:textSize="@dimen/thrid_font"
            android:drawableTop="@mipmap/share_weixincricle"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="朋友圈"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/bottom_div"/>
        <TextView
            android:id="@+id/share_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5F5D5D"
            android:layout_weight="1"
            android:textSize="@dimen/thrid_font"
            android:drawableTop="@mipmap/share_qq"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="QQ"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/bottom_div"/>
        <TextView
            android:id="@+id/share_qqcricle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5F5D5D"
            android:layout_weight="1"
            android:textSize="@dimen/thrid_font"
            android:drawableTop="@mipmap/share_qqcricle"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="QQ空间"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bottom_div"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/share_sina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5F5D5D"
            android:layout_weight="1"
            android:textSize="@dimen/thrid_font"
            android:drawableTop="@mipmap/share_xinlan"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="新浪微博"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>
        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/bottom_div"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5F5D5D"
            android:layout_weight="1"
            android:visibility="invisible"
            android:textSize="@dimen/thrid_font"
            android:drawableTop="@mipmap/share_weixincricle"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="朋友圈"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/bottom_div"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5F5D5D"
            android:layout_weight="1"
            android:textSize="@dimen/thrid_font"
            android:drawableTop="@mipmap/share_qq"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:visibility="invisible"
            android:text="QQ"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/bottom_div"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5F5D5D"
            android:layout_weight="1"
            android:textSize="@dimen/thrid_font"
            android:drawableTop="@mipmap/share_qqcricle"
            android:drawablePadding="10dp"
            android:visibility="invisible"
            android:gravity="center"
            android:text="QQ空间"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/second_font"
        android:textColor="#5F5D5D"
        android:text="请选择您分分享方式"/>

</LinearLayout>