<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/yxlist_item_image"
        android:layout_width="101dp"
        android:layout_height="101dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@color/activity_bg" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/yxlist_item_incream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/num_incream_btn" />

        <TextView
            android:id="@+id/yxlist_item_num"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@mipmap/num_input"
            android:gravity="center"
            android:inputType="number"
            android:text="1"
            android:textColor="#332C2B"
            android:textSize="@dimen/second_font" />

        <ImageView
            android:id="@+id/yxlist_item_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/num_add_btn" />
    </LinearLayout>

    <TextView
        android:id="@+id/yxlist_item_del"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textColor="@color/write"
        android:background="#f19262"
        android:textSize="@dimen/second_font"
        android:text="删除"
        android:padding="8dp"
        android:layout_height="match_parent" />


    <TextView
        android:id="@+id/yxlist_item_change"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textColor="@color/write"
        android:background="#ed753a"
        android:textSize="@dimen/second_font"
        android:text="更改"
        android:padding="8dp"
        android:layout_height="match_parent" />


</LinearLayout>