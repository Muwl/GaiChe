<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/activity_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:background="@color/write"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bottom_div"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cricle_org"/>
        <TextView
            android:id="@+id/aftersale_item_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ED753A"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/second_font"
            android:text="订单号：123222"/>
    </LinearLayout>

    <ImageView
        android:layerType="software"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/dashed_lin"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cricle_org"/>

        <ImageView
            android:id="@+id/aftersale_item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@color/activity_bg"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/aftersale_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="【奥迪A6 1.8L 车大灯总成】汽车制动系统股份有限公司"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/second_font" />

                <TextView
                    android:id="@+id/aftersale_item_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/aftersale_item_name"
                    android:layout_alignParentRight="true"
                    android:text="x1"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/second_font" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/aftersale_item_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥100.00元"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/first_font" />

                <TextView
                    android:id="@+id/aftersale_item_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="1.00M"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/first_font" />
            </RelativeLayout>
        </LinearLayout>



    </LinearLayout>

    <ImageView
        android:layerType="software"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/dashed_lin"
        />

    <TextView
        android:id="@+id/aftersale_item_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="10dp"
        android:textColor="#009B4C"
        android:textSize="@dimen/second_font"
        android:text="退款中"/>

    <ImageView
        android:layerType="software"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/dashed_lin"
        />

    <TextView
        android:id="@+id/aftersale_item_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="10dp"
        android:textColor="#5F5D5D"
        android:clickable="true"
        android:textSize="@dimen/second_font"
        android:text="退款详情"/>

    <ImageView
        android:layerType="software"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/dashed_lin"
        />

</LinearLayout>
    </LinearLayout>