<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/title_bg"
    android:layout_height="49dp">


    <ImageView
        android:id="@+id/title_code"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:visibility="gone"
        android:clickable="true"
        android:src="@drawable/title_code_btn"/>

    <ImageView
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:clickable="true"
        android:src="@drawable/title_back"/>


    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="@color/title_text"
        android:text="盖车云修"
        android:textSize="@dimen/title_font"/>

    <ImageView
        android:id="@+id/title_message"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/title_message_btn"
        android:visibility="gone"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/title_service"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:gravity="center"
        android:paddingRight="13dp"
        android:text="客服"
        android:textColor="@color/title_text_btn"
        android:textSize="@dimen/first_font"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/title_map"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/title_text"
        android:paddingRight="13dp"
        android:clickable="true"
        android:visibility="gone"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/title_map_btn"
            android:clickable="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="北京"
            android:textColor="@color/title_text"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp" />


    </RelativeLayout>

</RelativeLayout>