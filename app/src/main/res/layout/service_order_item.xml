<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/write"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/servicorder_item_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#332c2b"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/second_font"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/servicorder_item_money"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#332c2b"
            android:textSize="@dimen/second_font"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/servicorder_item_num"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textColor="#ed753a"
            android:textSize="@dimen/second_font"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bottom_div"/>


    <TextView
        android:id="@+id/servicorder_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="@dimen/second_font"
        android:textColor="#646464"/>


</LinearLayout>