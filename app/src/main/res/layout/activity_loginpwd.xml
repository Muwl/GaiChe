<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/write"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <include
                android:id="@+id/loginpwd_title"
                layout="@layout/activity_title"/>

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">
            <ImageView
                android:id="@+id/loginpwd_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/phone_phone"/>

            <TextView
                android:id="@+id/loginpwd_phone"
                android:layout_toRightOf="@id/loginpwd_image1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:textColor="#332C2B"
                android:textSize="@dimen/first_font"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_toRightOf="@id/loginpwd_image1"
                android:layout_below="@id/loginpwd_phone"
                android:layout_marginLeft="6dp"
                android:background="@color/bottom_div"/>
        </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp">
                <ImageView
                    android:id="@+id/loginpwd_image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/phone_code"/>


                <TextView
                    android:id="@+id/loginpwd_getcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/code_bg_btn"
                    android:textColor="#333333"
                    android:textSize="@dimen/thrid_font"
                    android:text="获取验证码"
                    android:padding="8dp"
                    android:layout_alignParentRight="true"/>

                <EditText
                    android:id="@+id/loginpwd_code"
                    android:layout_toRightOf="@id/loginpwd_image2"
                    android:layout_toLeftOf="@+id/loginpwd_getcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:inputType="number"
                    android:background="@null"
                    android:textColorHint="#B3B3B3"
                    android:hint="请输入验证码"
                    android:textColor="#332C2B"
                    android:textSize="@dimen/first_font"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_toRightOf="@id/loginpwd_image2"
                    android:layout_below="@id/loginpwd_getcode"
                    android:layout_marginLeft="6dp"
                    android:background="@color/bottom_div"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp">
                <ImageView
                    android:id="@+id/loginpwd_image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/phone_pwd"/>

                <EditText
                    android:id="@+id/loginpwd_pwd"
                    android:layout_toRightOf="@id/loginpwd_image3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:password="true"
                    android:paddingRight="15dp"
                    android:textColorHint="#B3B3B3"
                    android:paddingBottom="5dp"
                    android:textColor="#332C2B"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:textSize="@dimen/first_font"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_toRightOf="@id/loginpwd_image3"
                    android:layout_below="@id/loginpwd_pwd"
                    android:layout_marginLeft="6dp"
                    android:background="@color/bottom_div"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp">
                <ImageView
                    android:id="@+id/loginpwd_image4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/phone_repwd"/>




                <EditText
                    android:id="@+id/loginpwd_repwd"
                    android:layout_toRightOf="@id/loginpwd_image4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:background="@null"
                    android:textColorHint="#B3B3B3"
                    android:password="true"
                    android:hint="请再次输入密码"
                    android:textColor="#332C2B"
                    android:textSize="@dimen/first_font"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_toRightOf="@id/loginpwd_image4"
                    android:layout_below="@id/loginpwd_repwd"
                    android:layout_marginLeft="6dp"
                    android:background="@color/bottom_div"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/loginpwd_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/write"
                android:layout_marginTop="25dp"
                android:background="@drawable/submit_bg_btn"
                android:textSize="@dimen/first_font"
                android:text="提交"
                android:padding="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"/>

        </LinearLayout>


    </ScrollView>

        <include
            android:id="@+id/loginpwd_pro"
            layout="@layout/pro"
            android:visibility="gone"
            />
    </RelativeLayout>

</LinearLayout>