<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/write"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/carbrand_title"
        layout="@layout/activity_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <FrameLayout
            android:id="@+id/carbrand_gv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/carbrand_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/carbrand_dialog"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_gravity="center"
                android:background="@drawable/show_head"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="30.0dip"
                android:visibility="invisible" />

            <com.gaicheyunxiu.gaiche.view.sortlistview.SideBar
                android:id="@+id/constants_sidrbar"
                android:layout_width="30.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:background="@null" />
        </FrameLayout>

        <include
            android:id="@+id/constants_pro"
            layout="@layout/pro"
            android:visibility="gone"/>
    </RelativeLayout>



</LinearLayout>