<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/write"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:paddingTop="6dp"
    android:paddingBottom="8dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cart_item_item_icon"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/image_loading_default"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="18dp">

        <TextView
            android:id="@+id/cart_item_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#5F5D5D"
            android:textSize="@dimen/thrid_font"
            android:text="【奥迪A6 1.8L 车大灯总成】汽车制动系统股份有限公司"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/cart_item_item_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#EF8641"
                android:textSize="@dimen/second_font"
                android:text="￥100.00"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#EF8641"
                android:layout_marginLeft="8dp"
                android:textSize="@dimen/thrid_font"
                android:text="M值："/>

            <TextView
                android:id="@+id/cart_item_item_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#EF8641"
                android:textSize="@dimen/second_font"
                android:text="1.00M"/>


        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/cart_item_item_incream"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/num_incream_btn"/>

                <TextView
                    android:id="@+id/cart_item_item_num"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@mipmap/num_input"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#332C2B"
                    android:textSize="@dimen/second_font"
                    />
                <ImageView
                    android:id="@+id/cart_item_item_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/num_add_btn"/>
                    </LinearLayout>

                <TextView
                    android:id="@+id/cart_item_item_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/del_bg_btn"
                    android:textSize="@dimen/second_font"
                    android:padding="6dp"
                    android:clickable="true"
                    android:layout_marginLeft="15dp"
                    android:text="删除"
                    android:textColor="#5F5D5D"/>
            </LinearLayout>



    </LinearLayout>



</LinearLayout>