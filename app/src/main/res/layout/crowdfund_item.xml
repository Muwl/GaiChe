<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/write"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/crowdfund_item_image"
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:scaleType="centerCrop"
            android:src="@color/activity_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/crowdfund_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/second_font"
                    android:text="【奥迪A6 1.8L 车大灯总成】汽车制动系统股份有限公司"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >
                <TextView
                    android:id="@+id/crowdfund_item_money"
                    android:layout_width="wrap_content"
                    android:textColor="#ED753A"
                    android:textSize="@dimen/first_font"
                    android:text="￥100.00元"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/crowdfund_item_m"
                    android:layout_width="wrap_content"
                    android:textColor="#ED753A"
                    android:textSize="@dimen/first_font"
                    android:layout_alignParentRight="true"
                    android:text="1.00M"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="bottom"
                >
                <TextView
                    android:id="@+id/crowdfund_item_oldmoney"
                    android:layout_width="wrap_content"
                    android:textColor="#5F5D5D"
                    android:layout_weight="1"
                    android:textSize="@dimen/second_font"
                    android:text="￥180.00"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/second_font"
                    android:text="众筹收益:"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/crowdfund_item_earnings"
                    android:layout_width="wrap_content"
                    android:textColor="#5F5D5D"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/title_font"
                    android:text="20.00%"
                    android:layout_height="wrap_content" />



            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>