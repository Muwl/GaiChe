<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/write"
    android:orientation="vertical">

    <include
        android:id="@+id/crowdfund_title"
        layout="@layout/activity_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#eeeeef" />

        <ImageView
            android:id="@+id/crowdfund_schedule"
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:background="#eb4c43" />

        <TextView
            android:id="@+id/crowdfund_bartext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="10.00%"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/crowdfund_crowed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100.00万"
                android:textColor="#e53b28"
                android:textSize="@dimen/first_font" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="已筹资"
                android:textColor="#332c2b"
                android:textSize="@dimen/second_font" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/crowdfund_totalcrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="799.00万"
                android:textColor="#e53b28"
                android:textSize="@dimen/first_font" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="众筹总金额"
                android:textColor="#332c2b"
                android:textSize="@dimen/second_font" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/crowdfund_everycrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.500万"
                android:textColor="#e53b28"
                android:textSize="@dimen/first_font" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="单笔金额"
                android:textColor="#332c2b"
                android:textSize="@dimen/second_font" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/crowdfund_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/time_bg"
                android:padding="3dp"
                android:text="23"
                android:textColor="@color/write"
                android:textSize="@dimen/second_font" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="#ed753a" />

            <TextView
                android:id="@+id/crowdfund_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/time_bg"
                android:padding="3dp"
                android:text="22"
                android:textColor="@color/write"
                android:textSize="@dimen/second_font" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="#ed753a" />

            <TextView
                android:id="@+id/crowdfund_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/time_bg"
                android:padding="3dp"
                android:text="56"
                android:textColor="@color/write"
                android:textSize="@dimen/second_font" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>


            <TextView
                android:id="@+id/crowdfund_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="倒计时100天"
                android:textColor="#e53b28"
                android:textSize="@dimen/thrid_font" />

        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:background="@color/bottom_div"/>


    <RadioGroup
        android:id="@+id/crowdfund_rb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"

        android:orientation="horizontal"
        android:gravity="center_vertical">

        <RadioButton
            android:id="@+id/crowdfund_default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/store_text_rb"
            android:textSize="@dimen/second_font"
            android:gravity="center"
            android:paddingTop="10dp"
            android:button="@null"
            android:paddingBottom="10dp"
            android:text="默认"
            />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/bottom_div"/>
        <RadioButton
            android:id="@+id/crowdfund_moods"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/store_text_rb"
            android:textSize="@dimen/second_font"
            android:paddingTop="10dp"
            android:button="@null"
            android:paddingBottom="10dp"
            android:text="人气"
            />
        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/bottom_div"/>
        <RadioButton
            android:id="@+id/crowdfund_technology"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/store_text_rb"
            android:textSize="@dimen/second_font"
            android:button="@null"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="技术"
            />
        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/bottom_div"/>
        <RadioButton
            android:id="@+id/crowdfund_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/store_text_rb"
            android:textSize="@dimen/second_font"
            android:paddingTop="10dp"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="品牌"
            />
    </RadioGroup>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bottom_div"/>

    <ListView
        android:id="@+id/crowdfund_lisview"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:scrollbars="none"
        android:layout_height="match_parent"/>



</LinearLayout>