<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/activity_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/facial_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5f5d5d"
            android:layout_weight="1"
            android:textSize="@dimen/first_font"
            android:text="1:普通洗车"
            android:padding="8dp"/>


        <CheckBox
            android:id="@+id/facial_item_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/first_font"
            android:layout_centerVertical="true"
            android:button="@drawable/store_rb"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bottom_div"/>

    <TextView
        android:id="@+id/facial_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5f5d5d"
        android:layout_weight="1"
        android:textSize="@dimen/second_font"
        android:text="七座以下人工洗车"
        android:padding="8dp"/>



</LinearLayout>