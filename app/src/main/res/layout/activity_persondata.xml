<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/activity_bg"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/persondata_title"
                layout="@layout/activity_title"/>

            <RelativeLayout
                android:id="@+id/persondata_iconview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/item_bg"
                android:clickable="true"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/first_font"
                    android:text="头像"
                    android:layout_centerVertical="true"/>

                <com.gaicheyunxiu.gaiche.view.CircleImageView
                    android:id="@+id/persondata_icon"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/person_icon_default" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/main_go"/>

            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/bottom_div"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/bottom_div"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:background="@color/write"
                android:paddingBottom="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/first_font"
                    android:text="账号"/>

                <TextView
                    android:id="@+id/persondata_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/first_font"
                    android:text="GC10000"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/bottom_div"/>
            <LinearLayout
                android:id="@+id/persondata_nameview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:background="@drawable/item_bg"
                android:paddingBottom="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/first_font"
                    android:text="昵称"/>

                <TextView
                    android:id="@+id/persondata_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/first_font"
                    android:text="未设置"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/main_go"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/bottom_div"/>
            <LinearLayout
                android:id="@+id/persondata_phoneview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:background="@drawable/item_bg"
                android:paddingBottom="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/first_font"
                    android:text="手机号"/>

                <TextView
                    android:id="@+id/persondata_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/first_font"
                    android:text="1888888888"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/main_go"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/bottom_div"/>
            <LinearLayout
                android:id="@+id/persondata_emailview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:background="@drawable/item_bg"
                android:paddingBottom="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/first_font"
                    android:text="Email"/>

                <TextView
                    android:id="@+id/persondata_email"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/first_font"
                    android:text="未设置"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/main_go"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"

                android:background="@color/bottom_div"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/bottom_div"/>
            <LinearLayout
                android:id="@+id/persondata_passwordview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:background="@drawable/item_bg"
                android:paddingBottom="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/first_font"
                    android:text="密码管理"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/first_font"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/main_go"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/bottom_div"/>

        </LinearLayout>

    </ScrollView>



</LinearLayout>