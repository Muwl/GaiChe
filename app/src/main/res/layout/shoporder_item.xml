<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/write"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/cricle_org"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/shoporder_item_no"
                    android:layout_width="match_parent"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/thrid_font"
                    android:text="订单号：1273198"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/shoporder_item_time"
                    android:layout_width="match_parent"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/thrid_font"
                    android:layout_marginTop="3dp"
                    android:text="2015-10-20 08.55.40"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        <TextView
            android:id="@+id/shoporder_item_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="12dp"
            android:text="代发货"
            android:gravity="center"
            android:textSize="@dimen/first_font"
            android:textColor="#5F5D5D"/>
    </LinearLayout>

    <ImageView
        android:layerType="software"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/dashed_lin"
        />

    <com.gaicheyunxiu.gaiche.view.MyListView
        android:id="@+id/shoporder_item_listview"
        android:layout_width="match_parent"
        android:layerType="software"
        android:divider="@drawable/dashed_lin"
        android:dividerHeight="3px"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layerType="software"
        android:background="@drawable/dashed_lin"
        />

    <TextView
        android:id="@+id/shoporder_item_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="@dimen/first_font"
        android:textColor="#ED753A"
        android:text="￥200.00元"
        android:gravity="right"/>

    <ImageView
        android:id="@+id/shoporder_item_div"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layerType="software"
        android:background="@drawable/dashed_lin"
        />

    <LinearLayout
        android:id="@+id/shoporder_item_lin"
        android:layout_width="match_parent"
        android:gravity="right"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/shoporder_item_gradbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5F5D5D"
            android:clickable="true"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/shoporder_gray_btn"
            android:textSize="@dimen/thrid_font"
            android:text="取消订单"/>

        <TextView
            android:id="@+id/shoporder_item_orangebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ED753A"
            android:clickable="true"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:layout_marginLeft="10dp"
            android:paddingRight="8dp"
            android:background="@drawable/shoporder_orange_btn"
            android:textSize="@dimen/thrid_font"
            android:text="\u3000付款\u3000"/>
    </LinearLayout>

</LinearLayout>