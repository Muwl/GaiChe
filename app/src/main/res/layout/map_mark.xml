<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:background="@drawable/map_markgry"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/mark_lin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mark_title"
            android:textColor="@color/write"
            android:textSize="@dimen/second_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/mark_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/write"
            android:textSize="@dimen/thrid_font"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/mark_nav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/first_font"
        android:drawableRight="@mipmap/earnings_go"
        android:drawablePadding="5dp"
        android:textColor="@color/write"
        android:background="@drawable/map_markred"
        android:text="导航"
        android:gravity="center"
        android:padding="8dp"/>
</LinearLayout>