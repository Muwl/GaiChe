<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/write"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write">

        <TextView
            android:id="@+id/yxlist_item_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#5F5D5D"
            android:textSize="@dimen/second_font"
            android:text="笑我了解到"
            android:padding="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/yxlist_item_edit"
            android:layout_width="wrap_content"
            android:textColor="#ed753a"
            android:textSize="@dimen/second_font"
            android:text="编辑/更改"
            android:padding="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bottom_div" />
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/activity_bg"/>

    <com.gaicheyunxiu.gaiche.view.MyListView
        android:id="@+id/yxlist_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"/>




</LinearLayout>