<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/write"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/shipaddress_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@mipmap/address_select"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shipaddress_item_name"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/second_font"
                    android:textColor="#5F5D5D"
                    android:text="收货人：王子"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/shipaddress_item_phone"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/second_font"
                    android:textColor="#5F5D5D"
                    android:text="18656232645"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/shipaddress_item_address"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/second_font"
                android:textColor="#5F5D5D"
                android:text="收货地址：山东省日照市东港区临沂路于高新六路交汇处高新区创业中心11楼 盖车云修公司"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bottom_div"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="right">

            <TextView
                android:id="@+id/shipaddress_item_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5F5D5D"
                android:clickable="true"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/shoporder_gray_btn"
                android:textSize="@dimen/thrid_font"
                android:text="\u3000编辑\u3000"/>


            <TextView
                android:id="@+id/shipaddress_item_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5F5D5D"
                android:clickable="true"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:layout_marginLeft="12dp"
                android:paddingRight="8dp"
                android:background="@drawable/shoporder_gray_btn"
                android:textSize="@dimen/thrid_font"
                android:text="\u3000删除\u3000"/>
        </LinearLayout>


</LinearLayout>