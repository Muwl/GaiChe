<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_bg"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bottom_div" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/deposit_item_brandname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="建设银行"
                android:textColor="#566892"
                android:textSize="@dimen/second_font" />

            <TextView
                android:id="@+id/deposit_item_brandstype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="储蓄卡"
                android:textColor="#566892"
                android:textSize="@dimen/second_font" />

            <TextView
                android:id="@+id/deposit_item_brandno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="**** **** **** 8867"
                android:textColor="#5F5D5D"
                android:textSize="@dimen/first_font" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/deposit_item_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:button="@drawable/store_rb"
            android:enabled="false"
            android:focusable="false" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bottom_div" />
</LinearLayout>