<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/write"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/cricle_org" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/raiseorder_item_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单号：1273198"
                android:textColor="#5F5D5D"
                android:textSize="@dimen/thrid_font" />

            <TextView
                android:id="@+id/raiseorder_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="2015-10-20 08.55.40"
                android:textColor="#5F5D5D"
                android:textSize="@dimen/thrid_font" />
        </LinearLayout>

        <TextView
            android:id="@+id/raiseorder_item_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="12dp"
            android:text="代发货"
            android:textColor="#5F5D5D"
            android:textSize="@dimen/first_font" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/dashed_lin"
        android:layerType="software" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/raiseorder_item_image"
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:scaleType="centerCrop"
            android:src="@color/activity_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/raiseorder_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="【奥迪A6 1.8L 车大灯总成】汽车制动系统股份有限公司"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/second_font" />

                <TextView
                    android:id="@+id/raiseorder_item_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/raiseorder_item_name"
                    android:layout_alignParentRight="true"
                    android:text="x1"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/second_font" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/raiseorder_item_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥100.00元"
                    android:textColor="#ED753A"
                    android:textSize="@dimen/first_font" />

                <TextView
                    android:id="@+id/raiseorder_item_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="1.00M"
                    android:textColor="#ED753A"
                    android:textSize="@dimen/first_font" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/raiseorder_item_oldmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥180.00"
                    android:textColor="#5F5D5D"
                    android:textSize="@dimen/second_font" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="众筹收益："
                        android:textColor="#5F5D5D"
                        android:textSize="@dimen/second_font" />

                    <TextView
                        android:id="@+id/raiseorder_item_volume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20.00%"
                        android:textColor="#5F5D5D"
                        android:textSize="@dimen/first_font" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/raiseorder_item_div"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/dashed_lin"
        android:layerType="software" />

    <LinearLayout
        android:id="@+id/raiseorder_item_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/raiseorder_item_gradbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shoporder_gray_btn"
            android:clickable="true"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="成功/失败"
            android:textColor="#5F5D5D"
            android:textSize="@dimen/thrid_font" />

        <TextView
            android:id="@+id/shoporder_item_orangebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shoporder_orange_btn"
            android:clickable="true"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="\u3000付款\u3000"
            android:textColor="#ED753A"
            android:textSize="@dimen/thrid_font" />
    </LinearLayout>

</LinearLayout>