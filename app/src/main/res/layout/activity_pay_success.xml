<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/activity_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/pay_success_title"
        layout="@layout/activity_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@color/write"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pay_success_ok"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_font"
            android:text="支付成功"
            android:layout_marginTop="10dp"
            android:textColor="#0F9B45"
            />
        <TextView
            android:id="@+id/pay_success_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥100.00"
            android:textColor="#47464B"
            android:textSize="22sp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="15dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/pay_success_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/write"
        android:background="@drawable/dialog_ok_btn"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:textSize="@dimen/first_font"
        android:text="完成"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
</LinearLayout>