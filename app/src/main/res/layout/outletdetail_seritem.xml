<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/write"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/outletdetail_seritem_name"
        android:layout_width="match_parent"
        android:textColor="#5F5D5D"
        android:padding="8dp"
        android:text="更换安慰了贷款"
        android:textSize="@dimen/first_font"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bottom_div"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/outletdetail_seritem_monney"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#5F5D5D"
            android:text="￥：10远 0.25M"
            android:padding="8dp"
            android:textSize="@dimen/second_font"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/outletdetail_seritem_incream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@mipmap/incream"/>

        <EditText
            android:id="@+id/outletdetail_seritem_num"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/num_bg"
            android:textColor="#5F5D5D"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:textSize="@dimen/second_font"
            android:inputType="number"/>

        <ImageView
            android:id="@+id/outletdetail_seritem_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/add"/>

        <CheckBox
            android:id="@+id/outletdetail_seritem_cb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="8dp"
            android:paddingLeft="15dp"
            android:button="@null"
            android:drawableLeft="@drawable/store_rb"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bottom_div"/>
    <TextView
        android:id="@+id/outletdetail_seritem_content"
        android:layout_width="match_parent"
        android:textColor="#5F5D5D"
        android:padding="8dp"
        android:text="七座一下。。。"
        android:textSize="@dimen/first_font"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bottom_div"/>


</LinearLayout>