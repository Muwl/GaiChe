            <corners android:radius="20dp"></corners>
            <stroke android:width="1px" android:color="#AA000000"></stroke>
            <solid android:color="@color/item_press"/>
        </shape>
    </item>
  <item>
      <shape>
          <corners android:radius="20dp"></corners>
              <stroke android:width="1px" android:color="#AA000000"
                  ></stroke>
          <solid android:color="@color/write"/>
      </shape>
  </item>


</selector>